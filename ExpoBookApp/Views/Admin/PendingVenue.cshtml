@model List<Venues>

<h2>Pending Venue Listings</h2>

<table class="table">
    <thead>
        <tr>
            <th>Location Name</th>
            <th>Location Size</th>
            <th>Location Address</th>
            <th>Leaser Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venue in Model)
        {
            <tr>
                <td>@venue.Name</td>
                <td>@venue.Size</td>
                <td>@venue.Address</td>
                <td>@venue.CreatedBy?.Email</td>
                <td>
                    <form asp-action="ApproveVenue" method="post">
                        <input type="hidden" name="id" value="@venue.Id" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
