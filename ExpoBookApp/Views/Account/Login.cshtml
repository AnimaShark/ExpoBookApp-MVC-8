@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <h2 class="text-center mb-4">@ViewData["Title"]</h2>

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" name="email" placeholder="Enter your email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" placeholder="Enter your password" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-success w-100 mt-2">Login</button>

                <div class="text-danger mt-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            </form>

            <div class="mt-3 text-center">
                <a asp-controller="Account" asp-action="ForgetPassword" class="text-decoration-none">Forgot Password?</a>
            </div>
            <div class="mt-2 text-center">
                Don’t have an account? <a asp-controller="Account" asp-action="Register" class="text-decoration-none fw-bold">Register here</a>
            </div>
        </div>
    </div>
</div>


