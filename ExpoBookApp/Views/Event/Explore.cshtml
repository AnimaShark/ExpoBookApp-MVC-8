<!--Event List-->
<h2>All Events</h2>
<br />
@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@item.EventName</h5>
                        <p class="card-text">@item.Description</p>
                        <p><strong>Date:</strong> @item.StartDate.ToString("dd MMM yyyy")</p>
                        <p><strong>Venue:</strong> @item.Venue</p>
                        <a asp-controller="Ticket" asp-action="BuyTicket" asp-route-eventId="@item.Id" class="btn btn-primary">Buy Ticket</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">No events found.</div>
}
