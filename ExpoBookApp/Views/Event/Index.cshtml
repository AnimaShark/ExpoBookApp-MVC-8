@model ExpoBookApp.Models.EventIndexViewModel;

@{
    ViewData["Title"] = "Events Overview";
}

<h2>Upcoming Events</h2>
@if (!Model.UpcomingEvents.Any())
{
    <p>No upcoming events.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Theme</th>
                <th>Venue</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UpcomingEvents)
            {
                <tr>
                    <td>@item.EventName</td>
                    <td>@item.Theme</td>
                    <td>@item.Venue</td>
                    <td>@item.StartDate.ToShortDateString()</td>
                    <td>@item.EndDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<h2>All Events</h2>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <label for="themeFilter">Filter by Theme:</label>
    <select name="themeFilter" id="themeFilter" class="form-control mx-2" onchange="this.form.submit()">
        <option value="">All</option>
        @foreach (var theme in Model.Themes)
        {
            <option value="@theme" selected="@(theme == Model.ThemeFilter)">
                @theme
            </option>
        }
    </select>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Theme</th>
            <th>Venue</th>
            <th>Start</th>
            <th>End</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllEvents)
        {
            <tr>
                <td>@item.EventName</td>
                <td>@item.Theme</td>
                <td>@item.Venue</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
